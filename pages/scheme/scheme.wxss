/* pages/scheme/scheme.wxss */
.root {
  padding: 16px;
  padding-bottom: 70px;
}

.header {
  text-align: center;
  padding-top: 16px;
}

.header .title {
  font-size: 22px;
}

.header .line {
  border: 2px solid #065c5a;
  display: block;
  width: 80px;
  margin: 8px auto;
}

.info {
  background: #fff;
  padding: 0 16px 16px;
  border-radius: 10px;
}

.info .title {
  color: #065c5a;
  font-size: 14px;
  text-align: center;
  padding: 16px;
}

.info .about {
  color: #666;
  font-size: 13px;
  letter-spacing:2px;
}

.info .text {
  color: #666;
  font-size: 12px;
  display: block;
}

.info .imageBox {
  display: flex;
  align-items: center;
}

.info .imageBox .item {
  flex: 1;
  display: flex;
  align-content: center;
  justify-content: center;
}

.info .image {
  width: 100px;
  height: 80px;
}

.info .line {
  height: 60px;
  width: 1px;
  background: rgb(242, 242, 242);
}

.info .contentBox {
  display: flex;
}

.info .contentBox .item {
  flex: 1;
  text-align: center;
  padding: 8px 4px 4px;
  font-size: 14px;
  color: #666;
}
