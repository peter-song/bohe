/* pages/graphics/graphics.wxss */

.header {
  position: fixed;
  width: 100%;
  background-color: #065C5A;
  color: #fff;
  text-align: center;
  padding: 8px;
  font-size: 12px;
}

.content {
  margin-top: 34px;
}

.image {
  height: 180px;
  /* width: 100%; */
}

.preface{
  background: #fff;
  padding-top:34px;
}

.item {
  background: #fff;
  color: #666;
  padding-top: 12px;
  border-bottom: 1px solid #F3F3F3;
}

.item .title-line {
  font-size: 14px;
  border-left: 4px solid #065C5A;
  margin-left: 8px;
}

.item .title-line .text {
  padding-left: 8px;
}

.item .content-line {
  font-size: 12px;
  padding: 8px 16px;
}

.item .sub-title {
  font-size: 12px;
  padding: 8px 16px;
}

.item .sub-title .text {
  display: list-item;
  margin-left:16px;
}
